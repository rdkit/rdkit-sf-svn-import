from setuptools import Distribution, find_packages, setup


class BinaryDistribution(Distribution):
    def has_ext_modules(self):
        # We are installing already built extension modules, so let setuptools know about that
        # in order to create platform-dependent wheel.
        return True


setup(
    name="rdkit",
    version="@RDKIT_PY_VERSION@",
    description="A collection of chemoinformatics and machine-learning software written in C++ and Python",
    url="http://rdkit.org/",
    license="BSD-3-Clause",
    packages=find_packages(".", include=["rdkit", "rdkit.*"]),
    package_data={"": ["*.so", "*.dylib", "*.dll", "*.pyd"]},
    distclass=BinaryDistribution,
    install_requires=["numpy == @RDK_NUMPY_VERSION@", "pillow"],
)
